{
  "name": "frontend-applications",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/bommezijn/frontend-applications.git",
  "author": "bommezijn <nathanbommezijn@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "backend"
  ],
  "scripts": {
    "dev:backend": "cd backend && nodemon index.js",
    "dev:client": "cd client && yarn run dev",
    "dev": "run-p dev:*",
    "lint:backend": "cd backend && yarn run lint",
    "lint:client": "cd client && next lint",
    "lint": "run-s lint:*",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5"
  },
  "husky": {
    "hooks": {
       "pre-commit": "lint-staged"
    }
 },
 "lint-staged": {
   "*.{js, jsx}": ["eslint '*/**/*.{js, jsx}' --fix"]
 }
}
